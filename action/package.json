{
  "name": "hotspots-action",
  "version": "1.0.0",
  "description": "GitHub Action for Faultline complexity analysis",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc && ncc build dist/main.js -o dist --source-map --license licenses.txt",
    "format": "prettier --write '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run format && npm run lint && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yourorg/hotspots.git"
  },
  "keywords": [
    "actions",
    "complexity",
    "typescript",
    "javascript",
    "ci",
    "code-quality"
  ],
  "author": "Faultline",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "@actions/tool-cache": "^2.0.1",
    "@octokit/rest": "^20.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.55.0",
    "eslint-plugin-github": "^4.10.1",
    "jest": "^29.7.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  }
}
